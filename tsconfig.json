{
  "compilerOptions": {
    "module": "NodeNext",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "NodeNext",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "types"],
  "exclude": ["node_modules", "dist"]
}
